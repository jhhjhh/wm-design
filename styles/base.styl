/////////////////////////////////////////
//    PAGINATION
/////////////////////////////////////////

.pagination
  .pagination-num-showing
    text-align center
    color lighten(nearBlack, 30%)
  ul
    centeredNav()
    li
      margin 1em 0.1em
      a
        background-color nearBlack
        color white
        padding 0.3em 0.7em
        &:hover
          background-color lighter(nearBlack, 12%)

////////////////////////////////////////////////////
//    Currency dropdown
////////////////////////////////////////////////////

#currency-dropdown
  text-transform uppercase
  hoverLink()
  handPointer()

#currency-box
  clearfix()
  font-size 0.85em
  padding-right 0.4em

#currencies
  handPointer()

#currencies span
  display block
  float right
  margin 0.1em
  padding 0.22em 0.45em 0.18em 0.45em
  border 1px solid nearBlack
  background white
  &:hover
    background-color darken(white, 9%)

#currencies
  .selected
    font-weight normal
    color white
    background none nearBlack
    &:hover
      background-color lighten(nearBlack, 10%)

////////////////////////////////////////////////////
//    Cities
////////////////////////////////////////////////////

.full-image
  text-align center
  img
    width 100%
    max-width 500px

.city-features
  .city-feature
    width 500px
    border solid nearBlack
    border-width 2px 0
    .content
      img
        float left
        max-width 150px
      .copy
        float right
        width 500px - 150px - 20px

@media screen and (min-width: 400px)
  .city
    centered(380px)
  .city-desc
    margin-left 2%
    float left
    width 200px

@media screen and (min-width: 600px)
  .city
    width 580px

/* ====================
   ======= BLOG =======
   ==================== */

.post
  .title
    a
      invisibleLink()

/* ===========================
   ======== Accordion ========
   =========================== */

.top-accordion
  margin-bottom -1em !important
.top-accordion dd
  border-bottom none !important
.top-accordion dt
  border-bottom none !important

.accordion
  margin-bottom 0

.single-accordion
  margin-top 0
.single-accordion dt
  border-top none !important

.accordion a 
  outline 0

.accordion dt, .accordion dd
  margin 0
  padding 9px 0
  border-top 1px dotted gray
  border-bottom 1px dotted gray
  border-bottom 0

.accordion dt
  background-repeat no-repeat
  background-position right

.accordion dt:last-of-type, .accordion dd:last-of-type
  border-bottom 1px dotted gray

.accordion
  dt
    a
      text-decoration none
      display block
      font-weight bold
      color nearBlack

.accordion dd
  padding-top 2px
  border-top 0

.accordion dd:last-of-type
  border-top 1px solid white
  position relative
  top -1px

.accordion ul
  margin 0

