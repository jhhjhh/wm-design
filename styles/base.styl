//////////////////////////////////////////
//    SEARCH
//////////////////////////////////////////

.search
  centered(96%)
  max-width 516px
  .search-form
    text-align center
    centered(200px)
    margin-top 1em
    .button
      margin-top 0.6em
  .results
    .item
      margin-top 1em
      .thumbnail
        margin-right 1em
        float left
      .search-excerpt
        float left
        width 100%
        max-width 400px
        h3
          margin 0 0 0.5em 0
          a
            invisibleLink()

