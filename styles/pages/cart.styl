/////////////////////////////////////////////////////////////////////////
//   Cart
/////////////////////////////////////////////////////////////////////////

.basket-page
  centered(97%)
  max-width 900px
  min-width 600px

.checkout-button {
  font-weight: bold;
  text-transform: uppercase;
  color: white;
  font-size: 1.2em;
  text-align: center;
  width: 162px;
  padding: 15px 0 15px 0;
}

.empty {
  text-align: center;
}

#cartform table{
  border: 2px solid #EDEDEE;
  width: 100%;
  margin: 0 0 20px 0;
}
#cartform table td {
  text-align: center;
  vertical-align: top;
  padding: 5px;
  padding-top: 12px;
}
#cartform table th{
  text-align: center;
  text-transform: uppercase;
  background-color: #EDEDEE;
}
col.checkout-image{ width: 50px; }
col.checkout-delete{ width: 80px; }


#cartform td img{ display: block; }
#cartform input.text { border: solid 1px silver; padding: 4px; text-align: center; }

#cartform tr {
  border-bottom: 1px solid #EDEDEE;
}

#cartform .subtotal{
  text-align: center;
}
#cartform .update-quantities{
  text-align: center;
  padding: 5px;
  width: 170px;
}

#checkout-proceed{
  float: right;
  width: 162px;
  text-align: right;
}

#additional-checkout-buttons{
  width: 162px;
  padding: 5px;
  margin: 5px 0 0 0;
}

#additional-checkout-buttons-label{
  border-bottom: solid 1px silver;
  display: block;
  margin: 0 0 8px 0;
  font-size: 11px;
  font-weight: bold;
}

#cartform .basket-product-link {
  font-weight: normal;
  text-transform: uppercase;
  padding-left: 10px;
  text-align: left;
  invisibleLink()
}

.payment {
  width: 600px;
}