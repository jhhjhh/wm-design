// Footer

// fixed footer

.fixed-footer
  position fixed
  bottom 0
  z-index fixedFooterZindex
  background-color pastelColour6
  border-top 1px solid darken(pastelColour6, 7%)
  width 100%
  padding 1em
  .mailchimp
    width 300px
    .input
      float left
      width 120px
      input
        padding 3px
    .submit
      float right
      input
        padding 4px

// big footer

.bottom-wrap
  font-size 1.1em
  background-color veryLightGray
  border-top 1px solid veryLightGrayBorder
  margin-top 0.5em
  padding-top 1em
.footer
  margin 0 auto
  .column
    text-align center
    margin-bottom 1.2em
  .search-form
    .text-input
      width 120px
      padding 4px
    .button
      padding 5px

.footer-menu
  verticalNav()
  a
    text-transform capitalize
    hoverLink()

.social-footer
  font-size 1.1em
  h4
    font-size 1em
    margin 0
  .wma
    font-size 1.2em
  a
    invisibleLink()

@media screen and (min-width: 280px)
  .footer
    centered(280px)
    .column
      margin 1.2em
      float left
      text-align left

@media screen and (min-width: 394px)
  .footer
    width 394px

@media screen and (min-width: 431px)
  .footer
    width 431px

@media screen and (min-width: 659px)
  .footer
    width 659px

@media screen and (min-width: 874px)
  .footer
    width 874px