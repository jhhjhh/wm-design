//////////////////////////////////////////////////////////////////////////////
//   HEADER
//////////////////////////////////////////////////////////////////////////////

.fixed-basket
  position fixed
  z-index fixedBasketZindex
  top 0
  right 0
  font-size 1.2em
  condensedFont()
  text-transform uppercase
  background-color pastelColour3
  border solid darken(pastelColour3, 7%)
  border-width 0 0 1px 1px
  a
    invisibleLink()
    color #222596
  .basket-icon
    font-size 1.2em
  padding 5px
  display none

#header-margin
  display none
  width 100%
  height 2.6em
.header
  condensedFont()
  position absolute
  top 0
  width 100%
  z-index headerZindex
  clearfix()
  padding 5px 0 4px 0
  background-color veryLightGray
  border-bottom 1px solid veryLightGrayBorder
  a
    hoverLink()
    text-transform uppercase
  span.wma
    padding 0 0.6em

.top-right-links
  float right

.top-left-links
  float left

.top-left-links > div
  padding-left 10px

.top-right-links > span
  padding-right 10px

@media screen and (max-width: 750px)
  .top-left-links
    display none

.logo
  text-align center
  h1
    margin-top 1em
    line-height 1
    margin-bottom 0
    a
      text-align center
      font-weight normal
      font-size 33px
      font-weight bold
      invisibleLink()

.tag-line
  font-size 0.9em
  color lighten(nearBlack, 10%)
  margin -0.25em 0 1em 0

///////////////////////////////////////////////
//    main-menu
///////////////////////////////////////////////

.main-menu
  margin-bottom 0.5em
  text-align center
  line-height 1em
  ul
    centeredNav()
    padding-bottom 0.4em
    li
      padding 0 0.6em
      a
        font-size 1.1em
        padding 0
  #top-level
    centered(350px)
    border-bottom 1px dashed nearBlack
  #sub-menus
    ul
      margin-bottom 0.6em
      margin-top 0.5em
      border-width 0 0 1px 0
      li
        padding 0 0.5em

/* ===== breadcrumb ===== */

#breadcrumb
  margin 0.5em 0
  font-family smallFont
  font-size smallFontSize
  color #666
  a
    hoverLink()
  i
    font-size 0.8em