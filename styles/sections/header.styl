//////////////////////////////////////////////////////////////////////////////
//   HEADER
//////////////////////////////////////////////////////////////////////////////

#header-margin
  display none
  width 100%
  height 2.6em
.header
  condensedFont()
  position fixed
  top 0
  width 100%
  z-index headerZindex
  clearfix()
  padding 5px 0 4px 0
  background-color veryLightGray
  border-bottom 1px solid veryLightGrayBorder
  a
    hoverLink()
    text-transform uppercase
  span.wma
    padding 0 0.6em

.top-right-links
  float right

.top-left-links
  float left

.top-left-links > div
  padding-left 10px

.top-right-links > span
  padding-right 10px

@media screen and (max-width: 750px)
  .top-left-links
    display none

.logo
  text-align center
  h1
    margin-top 1em
    line-height 1
    margin-bottom 0
    a
      text-align center
      font-weight normal
      font-size 33px
      font-weight bold
      invisibleLink()

.tag-line
  font-size 0.9em
  color lighten(nearBlack, 10%)
  margin -0.25em 0 1em 0

///////////////////////////////////////////////
//    main-menu
///////////////////////////////////////////////

.main-menu
  margin-bottom 0.5em
  ul
    centeredNav()
    li
      a
        font-size 1.1em
        padding 0.2em 0.4em 0.2em 0.4em
  #top-level
    border-width 1px 0
  #sub-menus
    ul
      margin-bottom 0.3em
      border-width 0 0 1px 0

/* ===== breadcrumb ===== */

#breadcrumb
  margin 0.5em 0
  font-family smallFont
  font-size smallFontSize
  color #666
  a
    hoverLink()
  i
    font-size 0.8em